root = true

[*]
end_of_line = LF
charset = UTF-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
indent_style = tab
indent_size = 4

[devcontainer.json]
indent_style = space
indent_size = 4

[.vscode/*.json]
indent_style = space
indent_size = 4

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.sh]
indent_style = tab
